<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    <link rel="preload" href="{{- 'theme.css' | asset_url -}}" as="style">
    <link rel="preload" href="{{- 'theme.js' | asset_url -}}" as="script">

    {%- if canonical_url != blank -%}
      <link rel="canonical" href="{{ canonical_url }}">
    {%- endif -%}

    <title>{{ shop.name }}</title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {%- render 'social-meta-tags' -%}

    {% comment %}
      Note: The stylesheet tag will result in a 404 when running the dev server.
      This is expected since we are using style-loader instead of extracting CSS during development.
    {% endcomment %}
    {{ 'theme.css' | asset_url | stylesheet_tag }}

    <script>
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');

      if (typeof Shopify !== 'undefined' && Shopify.designMode) {
        document.documentElement.classList.add('shopify-design-mode');
      }
    </script>

    {{ content_for_header }}
  </head>
  <body class="flex flex-col min-h-screen template-{{ request.page_type | handle }}">
    {% section 'site-header' %}
    {% unless template.name == "cart" %}
      {% section 'cart' %}
    {% endunless %}
    <main id="content" class="flex-1">
      {{ content_for_layout }}
    </main>
    {% section 'site-footer' %}

    <script src="{{ 'theme.js' | asset_url }}" defer="defer"></script>
  </body>
</html>
