{
  "name": "@barrelny/vite-plugin-shopify-modules",
  "version": "0.0.0",
  "description": "Vite integration for Shopify themes",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "npm run build -- --watch",
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "watch": "tsup src/index.ts --dts --format cjs,esm --watch",
    "lint": "eslint ."
  },
  "keywords": [
    "vite",
    "shopify",
    "vite-plugin"
  ],
  "author": "Scott Polhemus <scott.polhemus@barrelny.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.0",
    "eslint": "^7.12.1",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "http-proxy-middleware": "^2.0.6",
    "jsdom": "^19.0.0",
    "rollup": "^2.75.6",
    "tsconfig": "workspace:*",
    "tsup": "^6.1.0",
    "typescript": "^4.1.6",
    "vite": "3.0.0-alpha.11"
  },
  "peerDependencies": {
    "vite": "3.0.0-alpha.11"
  },
  "dependencies": {
    "@types/lodash": "^4.14.182",
    "chokidar": "^3.5.3",
    "debug": "^4.3.4",
    "escape-string-regexp": "^4.0.0",
    "fast-glob": "^3.2.11",
    "lodash": "^4.17.21",
    "magic-string": "^0.26.2"
  }
}
