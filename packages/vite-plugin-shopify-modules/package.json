{
  "name": "vite-plugin-shopify-modules",
  "version": "0.0.7",
  "description": "Vite plugin for organizing Shopify theme code into modules",
  "repository": {
    "url": "barrel/shopify-vite",
    "directory": "packages/vite-plugin-shopify-modules"
  },
  "keywords": [
    "vite",
    "shopify",
    "vite-plugin"
  ],
  "author": "Barrel, LLC",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "npm run build -- --watch",
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "watch": "tsup src/index.ts --dts --format cjs,esm --watch",
    "lint": "eslint .",
    "test": "vitest run"
  },
  "peerDependencies": {
    "vite": "^4.0.4"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "debug": "^4.3.4",
    "fast-glob": "^3.2.11",
    "just-debounce": "^1.1.0"
  },
  "devDependencies": {
    "tsconfig": "workspace:*",
    "vitest": "^0.25.7"
  }
}
