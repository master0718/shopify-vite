{
  "name": "vite-plugin-shopify-theme-settings",
  "version": "0.0.6",
  "description": "Vite plugin for merging Shopify theme settings from multiple source files",
  "keywords": [
    "vite",
    "shopify",
    "vite-plugin"
  ],
  "author": "Barrel, LLC",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "npm run build -- --watch",
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "watch": "tsup src/index.ts --dts --format cjs,esm --watch",
    "lint": "eslint .",
    "test": "vitest run"
  },
  "peerDependencies": {
    "vite": "^4.0.4"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "tsconfig": "workspace:*",
    "vitest": "^0.25.0"
  }
}
