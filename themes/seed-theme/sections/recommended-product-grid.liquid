<recommended-product-grid data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit=4" data-slot="recommended-product-grid">
  {%- if recommendations.performed and recommendations.products_count > 0 -%}
    {% render 'product-grid', products: recommendations.products %}
  {% endif %}
</recommended-product-grid>

{% schema %}
{
  "name": "Recommended Product Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ]
}
{% endschema %}
